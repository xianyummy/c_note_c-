#include <cstdlib>
#include <iostream>
#include <cstring>
#include<fstream>
using namespace std;
int main() {
	int n, sum = 0, i = 1;

	do {
		cout << "輸入一個奇數: ";
		cin >> n;
	} while (n % 2 == 0 || n < 1);

	for (i = 1; i <= n; i += 2) {
		sum += i;
	}

	cout << "從" << 1 << "到" << n << "間的奇數總和為" << sum;
	return 0;
}
